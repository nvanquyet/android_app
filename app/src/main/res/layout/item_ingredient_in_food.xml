<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Ingredient info section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nguyên liệu"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Quantity and unit section with adjust buttons (only for ingredients in inventory) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp">

        <!-- Decrease button (only visible for ingredients in inventory) -->
        <ImageButton
            android:id="@+id/btn_decrease"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_remove"
            android:background="@drawable/circle_background"
            android:contentDescription="Giảm số lượng"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:minWidth="40dp"
            android:gravity="center" />

        <!-- Increase button (only visible for ingredients in inventory) -->
        <ImageButton
            android:id="@+id/btn_increase"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_plus"
            android:background="@drawable/circle_background"
            android:contentDescription="Tăng số lượng"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>